<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="202106281958-01" author="alisson.vighini">
        <createTable tableName="responsible" remarks="This table holds the information of a person responsible for a task.">
            <column name="id" type="int" autoIncrement="true" remarks="identification field">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(100)" remarks="Name of the responsible">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(50)" remarks="Email of the responsible">
                <constraints nullable="false"/>
            </column>
            <column name="birth_date" type="date" remarks="Birth date of the responsible">
                <constraints nullable="false"/>
            </column>
            <column name="situation" type="boolean" remarks="Situation of the responsible">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
